<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/template_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:textSize="32dp"
            tools:text="This is the title of the event!  aaaaaaaaaaaaaaaaaaaaaaaaa      " />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/template_category_textview"
                style="@style/smallRightText"
                android:layout_weight="0.33"
                tools:text="Sport"/>

            <TextView
                android:id="@+id/template_author_textview"
                style="@style/smallRightText"
                android:layout_weight="0.33"
                tools:text="SKREFI"/>

            <TextView
                android:id="@+id/template_date_textview"
                style="@style/smallRightText"
                android:layout_weight="0.33"
                tools:text="09-May-2018 19:01" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>